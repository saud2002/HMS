# HMS Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=mysql+pymysql://root:@localhost:3306/hms

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production-hms-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Application Settings
APP_NAME=Hospital Management System
APP_VERSION=1.0.0
DEBUG=false

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,*

# Hospital Information
HOSPITAL_NAME=Private Medical Center
HOSPITAL_ADDRESS=123 Medical Street, City
HOSPITAL_PHONE=+94-11-1234567
HOSPITAL_EMAIL=info@medicalcenter.lk

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000